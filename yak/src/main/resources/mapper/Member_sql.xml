<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <!-- 맵핑될 DAO 인터페이스의 Full name 을 줍니다. -->
 
<mapper namespace="member"> 
<!-- id 속성은 DAO 의 메소드와 같아야 한다. 여기의 boardVO 는 mybatis-confg.xml 에 Alias 되어 있습니다. -->

		<insert id="add">
			<![CDATA[
            INSERT INTO MEMBER_F
            (
                DRUG_NAME,
                ID
            )
            VALUES
            (
                #{drug_name},
                #{id}
            )
        ]]>
		</insert>
		<insert id="register">
        <![CDATA[
            INSERT INTO MEMBERR
            (
                ID,
                PW,
                NAME,
                GENDER,
                YEAR,
                EMAIL
            )
            VALUES
            (
                #{id},
                #{pw},
                #{name},
                #{gender},
                #{year},
                #{email}
            )
        ]]>
    </insert>
    <select id="selectByEmail" resultType="com.km.yak.vo.MemberVO">
        <![CDATA[
          SELECT
              EMAIL,
              NAME
          FROM
              MEMBERR
          WHERE
              EMAIL = #{email}       
      ]]>
    </select>
    
    <select id="selectById" resultType="com.km.yak.vo.MemberVO">
        <![CDATA[
          SELECT
              *
          FROM
              MEMBERR
          WHERE
              ID = #{id}       
      ]]>
    </select>
    
    
</mapper>